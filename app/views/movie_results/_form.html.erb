<div class="container" data-controller="question">

  <%= form_for @movie_result, url: movie_questions_path, method: :post do |f| %>

    <div class="tab d-none">
      <div class="d-flex justify-content-center">
        <h2 style="text-align: center;">What's your favourite colour?</h2>
      </div>
      <%= render "steps"  %>
      <%= render "colour_form"  %>
    </div>

    <div class="tab d-none">
      <div class="d-flex justify-content-center">
        <h2>How are you feeling today?</h2>
      </div>
      <%= render "steps"  %>
      <%= render "mood_form" %>
    </div>

    <div class="tab d-none">
      <div class="d-flex justify-content-center">
        <h2 style="text-align: center;">What decade do you identify most with?</h2>
      </div>
      <%= render "steps"  %>
      <%= render "decade_form" %>
    </div>

    <div style="overflow:auto;">
      <div class="d-flex justify-content-center">
        <%# <button type="button" id="prevBtn">Previous</button> %>
        <button type="button" id="nextBtn" data-question-target="next" data-action="click->question#next">Next</button>
      </div>
    </div>

    <div class="d-flex mt-5 justify-content-center">
      <%= hidden_field_tag :time_taken, :time %>
      <div>
        <input type="submit" value="ROLL" class="big-button" data-time-saved-target="roll" data-action="click->time-saved#time">
      </div>
    </div>

  <% end %>
</div>