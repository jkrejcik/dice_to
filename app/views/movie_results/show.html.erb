<div class="container mt-5" data-controller="time-saved">

    <div class="movie panel" data-time-saved-target="panel">
      <div class="d-flex justify-content-center mb-2">
          <%= image_tag "#{@movie_result.movie.image}", width: 300 %>
      </div>
      <h1><%= @movie_result.movie.title %></h1>
      <p><%= @movie_result.movie.overview %></p>
      <div class="d-none">
            <p>Based on overthinkers everywhere, you saved a lot of time on this decision!</p>
            <div class="time"><%= @movie_result.time_taken %></div>
      </div>
      <div class="d-flex justify-content-between">

        <% if @movie_result.accepted.nil? %>
          <%= simple_form_for(@movie_result), movie_suggestion(@movie_result)  %>
          <input type="submit" value="Accept" class="accept-btn" data-time-saved-target="accept" data-action="click->time-saved#final">
          <%# run this code if input button is clicked %>
          <%= link_to "Reject", movie_questions_path, class: "back-to-roll-btn" %>
          <%= link_to "◀ Back to Feed", history_path, class: "accept-btn d-none" %>
        <% elsif @movie_result.accepted.true? || @movie_result.accepted.false?  %>
          <%= link_to "◀ Back to Feed", history_path, class: "accept-btn d-none" %>
        <% end %>
      </div>
    </div>
</div>
