<div>
  <div class="d-flex flex-wrap justify-content-center">
    <div class="checkbox-div">
      <%= radio_button_tag :weather, "cloudy", false, class: "checkbox-weather" %>
      <label for="weather_cloudy" style="" data-action="click->question#select">☁️</label>
    </div>

    <div class="checkbox-div">
      <%= radio_button_tag :weather, "sunny", false, class: "checkbox-weather" %>
      <label for="weather_sunny" style="" data-action="click->question#select">🌞</label>
    </div>

    <div class="checkbox-div">
      <%= radio_button_tag :weather, "rainy", false, class: "checkbox-weather" %>
      <label for="weather_rainy" style="" data-action="click->question#select">🌧️</label>
    </div>

    <div class="checkbox-div">
      <%= radio_button_tag :weather, "stormy", false, class: "checkbox-weather" %>
      <label for="weather_stormy" style="" data-action="click->question#select">🌪️</label>
    </div>
  </div>
</div>