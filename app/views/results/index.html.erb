<div class="container-history">
  <h2 class="page-title">HISTORY</h2>
  <ul class="cards mb-2">
  <li class="card card-first-watch">
        <h3>Watch</h3>
    </li>
    <% @movie_results.each do |result| %>
      <li class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= result.movie.image %>)">
      <%= link_to "", movie_suggestion_path(result.id), class: "card-img-top" %>
      <h3 class="card-title"><%= result.movie.title %></h3>
          <div>
            <% if result.rating.nil? %>
              <%= simple_form_for(@review, data: { controller: "form-submit", form_submit_target: "form" }, id: @review.id) do |f| %>
              <%# need to get the rating to initially display 0 if nil otherwise the actual rating %>
              <%# if result.rating == nil display normal, else display rating %>
                <%= f.input :rating, collection: (1..5).to_a, label: false, input_html: {data: { controller: "star-rating", action: "click->form-submit#submit"} }, id: @review.id %>
                <%= hidden_field_tag "movie_result", result.id %>
                <%# need to get this to submit but invisibly %>
                <%= f.submit "Submit", class: "position-absolute bottom-0 end-0" %>
              <% end %>
            <% else %>
              <%# <%= result.rating.times do %>
              <%= result.rating %>
              <%= hidden_field_tag "movie_result_#{result.id}"%>
                <%# <%= f.input :rating, collection: (1..result.rating).to_a, label: false, input_html: {data: {controller: "star-rating", action: "click->form-submit#submit"}} %>
            <% end %>
          </div>
  
          
          <span class="time-ago position-absolute bottom-0 end-0">
            <% case (@today - result.created_at).round %>
              <% when 0..60 %>
                < 1 minute ago
              <% when 61..3600 %>
                <%= ((@today - result.created_at) / 60).round %> minutes ago
              <% when 3601..7199 %>
                1 hour ago
              <% when 7200..86400 %>
                <%= ((@today - result.created_at) / 3600).round %> hours ago
              <% when 86401..172799 %>
                yesterday
              <% else %>
              <%= ((@today - result.created_at) / 86400).round %> days ago
            <% end %>
          </span>
        <%# <div class="card-link-wrapper">
          <a href="" class="card-link">Details</a>
        </div> %>
      </li>
    <% end %>
  </ul>

