<div class="container w-100 mt-5">
  <h1 class="justify-self-center mb-5">Make your own!</h1>
  <%= form_for @custom_result, url: custom_results_path, method: :post do |f| %>
    <div data-controller="nested-form">
      <%= f.text_field :question, required: true, autofocus: true, class: "form-field mb-5", placeholder: 'Enter a question...', oninvalid: "this.setCustomValidity('Please enter a valid question')", oninput: "setCustomValidity('')" %>
        <div data-nested-form-target="form">
          <%= f.fields_for :options, Option.new, child_index: 1 do |option_subform| %>
            <div class="d-flex mt-4" data-nested-form-target="line" id="1">
              <%= option_subform.text_field :input, required: true, autofocus: false, class: "form-field", placeholder: 'Enter an option...', oninvalid: "this.setCustomValidity('Please fill in this option')", oninput: "setCustomValidity('')"%>
              <div class="d-flex ms-3">
                <button type="button" data-action="click->nested-form#toggle" class="plus-button" data-nested-form-target="sign"></button>
              </div>
            </div>
          <% end %>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-5">
      <%= f.submit 'ROLL', class: "big-button" %>
    </div>
  <% end %>
</div>

